<?xml version="1.0"?>
<robot name="exia_ground">

  <!-- World link -->
  <link name="world"/>

  <!-- Base link -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.1"/>
      <geometry>
        <box size="0.6 0.4 0.2"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0.1"/>
      <geometry>
        <box size="0.6 0.4 0.2"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="20.0"/>
      <origin xyz="0 0 0.1"/>
      <inertia ixx="1" iyy="1" izz="1"
               ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- FIXED JOINT (THIS IS THE KEY) -->
  <joint name="world_to_base" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 0 0"/>
  </joint>

</robot>
