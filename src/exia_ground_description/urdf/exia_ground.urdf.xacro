<?xml version="1.0"?>
<robot name="exia_ground" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Xacro arguments -->
  <xacro:arg name="config_path" default=""/>

  <!-- ==================== PROPERTIES ==================== -->
  <!-- Chassis dimensions -->
  <!-- Length: 2.11m, Width: 1.2m, Height: 0.6m -->

  <!-- Wheel properties -->
  <!-- Radius: 0.3m, Width: 0.15m -->
  <!-- Track width (Y): 1.1m (wheel center to center) -->
  <!-- Wheel base (X): 1.3m (front to rear axle) -->

  <!-- Drive type: Ackermann steering (car-like) -->
  <!-- Front wheels: steerable -->
  <!-- Rear wheels: driven -->

  <!-- ==================== BASE FOOTPRINT ==================== -->
  <!-- Ground projection of the robot - used for navigation -->
  <link name="base_footprint"/>

  <!-- ==================== BASE LINK (CHASSIS) ==================== -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="2.11 1.2 0.6"/>
      </geometry>
      <material name="blue">
        <color rgba="0.2 0.2 0.8 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="2.11 1.2 0.6"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="200.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <!-- Inertia for a box: Ixx = 1/12*m*(y^2+z^2), etc. -->
      <inertia ixx="30.0" ixy="0" ixz="0"
               iyy="80.2" iyz="0"
               izz="98.2"/>
    </inertial>
  </link>

  <!-- Connect base_link to base_footprint -->
  <!-- Elevate base_link by wheel_radius + half chassis height = 0.3 + 0.3 = 0.6m -->
  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.6" rpy="0 0 0"/>
  </joint>

  <!-- ==================== FRONT STEERING LINKS ==================== -->
  <!-- These are the steering knuckles that rotate to steer the front wheels -->

  <!-- FRONT LEFT STEERING LINK -->
  <link name="front_left_steer_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.08"/>
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.08"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="2.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.001" ixy="0" ixz="0"
               iyy="0.001" iyz="0"
               izz="0.001"/>
    </inertial>
  </link>

  <!-- FRONT RIGHT STEERING LINK -->
  <link name="front_right_steer_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.08"/>
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.08"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="2.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.001" ixy="0" ixz="0"
               iyy="0.001" iyz="0"
               izz="0.001"/>
    </inertial>
  </link>

  <!-- ==================== FRONT STEERING JOINTS ==================== -->
  <!-- Revolute joints that allow front wheels to steer (rotate about Z axis) -->

  <!-- FRONT LEFT STEERING JOINT -->
  <joint name="front_left_steer_joint" type="revolute">
    <parent link="base_link"/>
    <child link="front_left_steer_link"/>
    <origin xyz="0.65 0.55 -0.3" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.6" upper="0.6" effort="2000.0" velocity="3.0"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <!-- FRONT RIGHT STEERING JOINT -->
  <joint name="front_right_steer_joint" type="revolute">
    <parent link="base_link"/>
    <child link="front_right_steer_link"/>
    <origin xyz="0.65 -0.55 -0.3" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.6" upper="0.6" effort="2000.0" velocity="3.0"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <!-- ==================== FRONT WHEELS ==================== -->
  <!-- Front wheels are children of steering links, allowing them to steer -->

  <!-- FRONT LEFT WHEEL -->
  <link name="front_left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.3" length="0.15"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.3" length="0.15"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="10.0"/>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <inertia ixx="0.244" ixy="0" ixz="0"
               iyy="0.244" iyz="0"
               izz="0.45"/>
    </inertial>
  </link>

  <!-- Front left wheel joint - child of steering link -->
  <joint name="front_left_wheel_joint" type="continuous">
    <parent link="front_left_steer_link"/>
    <child link="front_left_wheel"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <!-- FRONT RIGHT WHEEL -->
  <link name="front_right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.3" length="0.15"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.3" length="0.15"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="10.0"/>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <inertia ixx="0.244" ixy="0" ixz="0"
               iyy="0.244" iyz="0"
               izz="0.45"/>
    </inertial>
  </link>

  <!-- Front right wheel joint - child of steering link -->
  <joint name="front_right_wheel_joint" type="continuous">
    <parent link="front_right_steer_link"/>
    <child link="front_right_wheel"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <!-- ==================== REAR WHEELS (DRIVE WHEELS) ==================== -->
  <!-- Rear wheels are directly connected to base_link and provide propulsion -->

  <!-- REAR LEFT WHEEL -->
  <link name="rear_left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.3" length="0.15"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.3" length="0.15"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="10.0"/>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <inertia ixx="0.244" ixy="0" ixz="0"
               iyy="0.244" iyz="0"
               izz="0.45"/>
    </inertial>
  </link>

  <joint name="rear_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_left_wheel"/>
    <origin xyz="-0.65 0.55 -0.3" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.01" friction="0.0"/>
  </joint>

  <!-- REAR RIGHT WHEEL -->
  <link name="rear_right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.3" length="0.15"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.3" length="0.15"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="10.0"/>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <inertia ixx="0.244" ixy="0" ixz="0"
               iyy="0.244" iyz="0"
               izz="0.45"/>
    </inertial>
  </link>

  <joint name="rear_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_right_wheel"/>
    <origin xyz="-0.65 -0.55 -0.3" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.01" friction="0.0"/>
  </joint>

  <!-- ==================== BRAKE SYSTEM ==================== -->
  <!-- Virtual brake actuator for simulation -->
  <!-- In real hardware: This maps to a brake motor/servo/actuator -->
  <!-- The brake_joint position (0-1) represents brake engagement level -->
  <!-- 0 = no brake, 1 = full brake -->

  <link name="brake_actuator_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.15 0.2 0.1"/>
      </geometry>
      <material name="red">
        <color rgba="0.8 0.2 0.2 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.15 0.2 0.1"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="2.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.001" ixy="0" ixz="0"
               iyy="0.001" iyz="0"
               izz="0.001"/>
    </inertial>
  </link>

  <!-- Brake actuator joint - position controlled (0.0 to 1.0) -->
  <!-- This is a virtual joint for control purposes -->
  <joint name="brake_joint" type="revolute">
    <parent link="base_link"/>
    <child link="brake_actuator_link"/>
    <origin xyz="-0.5 0 -0.15" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0.0" upper="1.0" effort="2000.0" velocity="5.0"/>
    <dynamics damping="0.1" friction="0.0"/>
  </joint>

  <!-- ==================== IMU SENSOR ==================== -->
  <!-- IMU mounted on top of the chassis, centered -->
  <!-- This represents the Yahboom 10-axis IMU for hardware deployment -->

  <link name="imu_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.02"/>
      </geometry>
      <material name="green">
        <color rgba="0.2 0.8 0.2 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.02"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.05"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.00001" ixy="0" ixz="0"
               iyy="0.00001" iyz="0"
               izz="0.00001"/>
    </inertial>
  </link>

  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0.31" rpy="0 0 0"/>
  </joint>

  <!-- ==================== LIDAR SENSOR ==================== -->
  <!-- 2D Lidar mounted on top of the chassis -->
  <!-- Simulation: Gazebo Fortress GPU ray sensor -->
  <!-- Hardware: Slamtec RPlidar S3 (40m range, 360 deg, 32000 samples/sec) -->
  <!-- Mount position: Forward of center, above chassis for unobstructed 360 deg view -->

  <link name="lidar_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <!-- RPlidar S3 approximate dimensions: 76mm diameter, 41mm height -->
        <cylinder radius="0.038" length="0.041"/>
      </geometry>
      <material name="dark_grey">
        <color rgba="0.2 0.2 0.2 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.038" length="0.041"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.190"/>  <!-- RPlidar S3 weight: ~190g -->
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.00005" ixy="0" ixz="0"
               iyy="0.00005" iyz="0"
               izz="0.00007"/>
    </inertial>
  </link>

  <!-- Lidar mount: Lower position to detect small obstacles -->
  <!-- Z = 0.15m (15cm) to detect obstacles >= 15cm tall at close range -->
  <!-- Tilted down 5 degrees (0.087 rad) to hit ground at ~1.7m distance -->
  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0.3 0 0.15" rpy="0 0.087 0"/>
  </joint>

  <!-- ==================== GAZEBO FORTRESS PROPERTIES ==================== -->

  <!-- Wheel friction for traction -->
  <gazebo reference="front_left_wheel">
    <collision>
      <surface>
        <friction>
          <ode>
            <mu>1.5</mu>
            <mu2>1.5</mu2>
          </ode>
        </friction>
      </surface>
    </collision>
  </gazebo>

  <gazebo reference="front_right_wheel">
    <collision>
      <surface>
        <friction>
          <ode>
            <mu>1.5</mu>
            <mu2>1.5</mu2>
          </ode>
        </friction>
      </surface>
    </collision>
  </gazebo>

  <gazebo reference="rear_left_wheel">
    <collision>
      <surface>
        <friction>
          <ode>
            <mu>1.5</mu>
            <mu2>1.5</mu2>
          </ode>
        </friction>
      </surface>
    </collision>
  </gazebo>

  <gazebo reference="rear_right_wheel">
    <collision>
      <surface>
        <friction>
          <ode>
            <mu>1.5</mu>
            <mu2>1.5</mu2>
          </ode>
        </friction>
      </surface>
    </collision>
  </gazebo>

  <!-- ==================== GAZEBO FORTRESS IMU SENSOR ==================== -->
  <gazebo reference="imu_link">
    <sensor name="imu_sensor" type="imu">
      <always_on>true</always_on>
      <update_rate>200</update_rate>
      <topic>imu</topic>
      <imu>
        <angular_velocity>
          <x><noise type="gaussian"><mean>0.0</mean><stddev>0.0002</stddev></noise></x>
          <y><noise type="gaussian"><mean>0.0</mean><stddev>0.0002</stddev></noise></y>
          <z><noise type="gaussian"><mean>0.0</mean><stddev>0.0002</stddev></noise></z>
        </angular_velocity>
        <linear_acceleration>
          <x><noise type="gaussian"><mean>0.0</mean><stddev>0.017</stddev></noise></x>
          <y><noise type="gaussian"><mean>0.0</mean><stddev>0.017</stddev></noise></y>
          <z><noise type="gaussian"><mean>0.0</mean><stddev>0.017</stddev></noise></z>
        </linear_acceleration>
      </imu>
    </sensor>
  </gazebo>

  <!-- ==================== GAZEBO FORTRESS LIDAR SENSOR ==================== -->
  <!-- 2D lidar sensor matching RPlidar S3 specifications -->
  <!-- For hardware: Use rplidar_ros driver publishing to /scan topic -->
  <gazebo reference="lidar_link">
    <sensor name="gpu_lidar" type="gpu_lidar">
      <update_rate>10</update_rate>
      <topic>lidar</topic>
      <gz_frame_id>lidar_link</gz_frame_id>
      <lidar>
        <scan>
          <horizontal>
            <samples>360</samples>
            <resolution>1</resolution>
            <min_angle>-3.14159</min_angle>
            <max_angle>3.14159</max_angle>
          </horizontal>
          <vertical>
            <samples>1</samples>
            <resolution>1</resolution>
            <min_angle>0</min_angle>
            <max_angle>0</max_angle>
          </vertical>
        </scan>
        <range>
          <min>0.2</min>
          <max>20.0</max>
        </range>
      </lidar>
      <always_on>true</always_on>
      <visualize>true</visualize>
    </sensor>
  </gazebo>

  <!-- ==================== ROS2 CONTROL (Gazebo Fortress) ==================== -->
  <ros2_control name="GazeboSimSystem" type="system">
    <hardware>
      <plugin>gz_ros2_control/GazeboSimSystem</plugin>
    </hardware>

    <!-- Steering joints - position control -->
    <joint name="front_left_steer_joint">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="front_right_steer_joint">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

    <!-- Drive joints - velocity control -->
    <joint name="rear_left_wheel_joint">
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="rear_right_wheel_joint">
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

    <!-- Brake joint - position control (0.0 to 1.0 engagement) -->
    <joint name="brake_joint">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
  </ros2_control>

  <gazebo>
    <plugin filename="gz_ros2_control-system" name="gz_ros2_control::GazeboSimROS2ControlPlugin">
      <robot_param>robot_description</robot_param>
      <robot_param_node>robot_state_publisher</robot_param_node>
      <!-- Only pass minimal hardware config - controllers loaded by spawners -->
      <parameters>$(arg config_path)</parameters>
    </plugin>
  </gazebo>

</robot>
